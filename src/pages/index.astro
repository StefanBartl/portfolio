---
import BaseLayout from '../layouts/BaseLayout.astro';
import Terminal from '../components/Terminal';
import PluginShowcase from '../components/PluginShowcase';
import FightingGame from '../components/game/FightingGame';
---

<BaseLayout title="Portfolio - Full-Stack Developer">
  <!-- Hero Section with Terminal -->
  <section class="min-h-screen flex items-center justify-center px-4 py-20">
    <div class="w-full max-w-6xl">
      <Terminal client:load />
    </div>
  </section>

  <!-- Fighting Game Section -->
  <section id="game" class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-terminal-accent mb-4 glitch" data-text="FEATURED PROJECT">
          FEATURED PROJECT
        </h2>
        <p class="text-terminal-text/70">
          A browser-based fighting game built with JavaScript (soon to be migrated to C++/WASM)
        </p>
      </div>

      <FightingGame client:load />

      <div class="mt-8 text-center">
        <a
          href="https://github.com/yourusername/fighting-game-wasm"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary inline-flex items-center gap-2"
