  </section>
</BaseLayout>

<style>
  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Section animations */
  section {
    animation: fadeIn 0.8s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
